<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || yield_content(:title) || "git-read" %></title>
    <%= stylesheet_link_tag "site", relative: true, "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "syntax", relative: true, "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "main", relative: true, "data-turbolinks-track": "reload" %>
  </head>
  <body class="page">
    <details id="table-of-contents" class="page__history" open>
      <summary class="page__history-summary">Table of Contents</summary>
      <nav class="history">
        <% repository.log.reverse_each do |commit| %>
          <%= current_link_to(
            escape_html(commit.message.lines.first),
            commit_path(commit),
            relative: true,
          ) %>
        <% end %>
      </nav>
    </details>

    <main class="page__content">
      <header>
        <% if defined?(commit) %>
          <% if commit.parent.present? %>
            <% link_to commit_path(commit.parent), relative: true do %>
              Previous
            <% end %>
          <% end %>

          <% next_commit = repository.log.detect { |child| child.parent&.sha == commit.sha } %>
          <% if next_commit.present? %>
            <% link_to commit_path(next_commit), relative: true do %>
              Next
            <% end %>
          <% end %>
        <% else %>
          <% link_to commit_path(repository.log.last), relative: true  do %>
            Get Started
          <% end %>
        <% end %>
      </header>

      <article class="commit">
        <%= yield %>
      </article>
    </main>
  </body>
</html>
